<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M2UApp.Views.Definicoes"
             Title="Definições">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Email, StringFormat='Bem Vindo {0}'}" Margin="10"/>
            <Entry Text="{Binding Password}" IsPassword="True" Margin="5,5" Placeholder="Introduza uma nova Password"/>
            <Entry x:Name="cfmpasswordentery" Placeholder="Confirme a sua Password" Text="{Binding ConfirmPassword}" 
                   IsPassword="True" />
            <Button x:Name="updatebtn" Text="Alterar Password" Clicked="updatebtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>