<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M2UApp.Views.Definicoes"
             Title="Definições">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Email, StringFormat='Bem Vindo {0}'}" Margin="10"/>
            <Entry Text="{Binding Password}" IsPassword="True" Margin="5,5" Placeholder="Introduza uma nova Password"/>
            <Button x:Name="updatebtn" Text="Alterar Password" Command="{Binding UpdateCommand}" />
            <Button x:Name="deletebtn" Text="Apagar Conta" Command="{Binding DeleteCommand}"/>
            <Button x:Name="logoutbtn" Text="Logout" Command="{Binding LogoutCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>