<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M2UApp.Views.AboutPage"
             Title="Página Inicial">
   
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#FFFFCDD2</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>

        <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" Padding="0,140,0,0">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                <Frame Padding="30,60,30,60" VerticalOptions="Center" HorizontalOptions="Center" OutlineColor="{StaticResource Secundary}">
                    <Image Source="aquinos_logo.png" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="64" />
                </Frame>
            </StackLayout>

            <Label Text="M2U | Application" FontSize="29" FontFamily="{OnPlatform Android='Baloo2-Bold.ttf#Baloo2 Bold',iOS='Baloo2-Bold'}" TextColor="{StaticResource Secundary}" FontAttributes="Bold" HorizontalOptions="Center" Padding="0,80,0,0" />
 

        </StackLayout>


    </Grid>
</ContentPage>
